doctype
html(lang='en')
	head
		meta(charset='utf-8')
		title= title + " | shop"
		link(rel="stylesheet", href="/stylesheets/main.css")
		link(rel="stylesheet", href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.1/dist/css/bootstrap.min.css")
		link(rel="stylesheet", href="https://cdn.jsdelivr.net/npm/font-awesome@4.7.0/css/font-awesome.min.css")
		link(rel="stylesheet", href="/stylesheets/darktheme.css")
		block head
	body.d-flex.flex-column.vh-100.bg-white
		include navbar
		main
			.row.mx-auto.col-10
				.col-lg-3.col-md-3.col-sm-12.px-0.mb-sm-2.mb-2
					include sidebar
				.col-lg-9.col-md-9.col-sm-12
					block content
		include footer
		block scripts
		script(src="/javascripts/switchTheme.js")
		script(src="/javascripts/authform.js")
		script(src="/javascripts/cart.js")
		script(src="https://code.jquery.com/jquery-3.5.1.slim.min.js" integrity="sha256-4+XzXVhsDmqanXGHaHvgh1gMQKX40OUvDEBTu8JcmNs=" crossorigin="anonymous")